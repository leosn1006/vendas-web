# Configurações do WhatsApp Business API
# Obtenha esses valores no Meta for Developers (https://developers.facebook.com/)
WHATSAPP_VERIFY_TOKEN=seu-token-de-verificacao-aqui
WHATSAPP_APP_SECRET=seu-app-secret-aqui
WHATSAPP_ACCESS_TOKEN=seu-access-token-aqui
WHATSAPP_PHONE_NUMBER_ID=seu-phone-number-id-aqui
WHATSAPP_BUSINESS_ACCOUNT_ID=seu-business-account-id-aqui

# Configurações do Banco de Dados MySQL
# Use senhas fortes em produção!
MYSQL_ROOT_PASSWORD=senha-root-segura-aqui
MYSQL_PASSWORD=senha-appuser-segura-aqui

# Configurações do Banco de Dados (para a aplicação)
DB_HOST=db
DB_PORT=3306
DB_NAME=vendasdb
DB_USER=appuser
DB_PASSWORD=senha-appuser-segura-aqui

# Configurações da OpenAI (se usar IA)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configurações de Ambiente
# development, staging, production
ENVIRONMENT=development

# Timezone
TZ=America/Sao_Paulo
